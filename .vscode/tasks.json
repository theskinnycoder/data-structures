{
  "version": "2.0.0",
  "type": "shell",

  // General console config
  "presentation": {
    "focus": true,
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true,
    "echo": false
  },
  "tasks": [
    // Compile Task
    {
      "type": "shell",
      "label": "Compile",
      "command": "/usr/bin/gcc",
      "args": ["-g", "${file}", "-o", "out/${fileBasenameNoExtension}.out"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "windows": {
        "command": "gcc",
        "args": ["-g", "${file}", "-o", "out/${fileBasenameNoExtension}.exe"]
      },
      "osx": {
        "command": "clang",
        "args": ["-g", "${file}", "-o", "out/${fileBasenameNoExtension}"]
      }
    },

    // Run Task
    {
      "type": "shell",
      "label": "Run",
      "command": "out/${fileBasenameNoExtension}.out",
      "promptOnClose": false,
      "dependsOn": ["Compile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "out/${fileBasenameNoExtension}.exe"
      },
      "osx": {
        "command": "out/${fileBasenameNoExtension}"
      }
    }
  ]
}
